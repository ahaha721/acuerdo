@using viafront3.Models.InternalViewModels
@using viafront3.Views.Trade
@using viafront3.Views
@model UserBalanceHistoryViewModel
@{
    ViewData["Title"] = "User Exchange Balance History";
    var more = Model.BalanceHistory.records.Count() >= Model.BalanceHistory.limit;
    var offset = Model.BalanceHistory.offset + Model.BalanceHistory.limit;
}
<h4>@ViewData["Title"] - @Model.Asset</h4>

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Balance History
            </div>
            <div class="panel-body">
                <table class="table table-bordered table-responsive table-hover">
                    <tr>
                        <th>
                            Time
                        </th>
                        <th>
                            Business
                        </th>
                        <th class="pad-decimals">
                            Change
                        </th>
                        <th>
                            Detail
                        </th>
                    </tr>
                    <tbody>@{
                        foreach (var item in Model.BalanceHistory.records)
                        {
                            <tr>
                                <td>
                                    @ViewUtils.FormatUnixTime(item.time)
                                </td>
                                <td>
                                    @item.business
                                </td>
                                <td>
                                    <span class="pad-decimals-data">
                                    @ViewUtils.FormatStrDec(item.change,
                                        Model.AssetSettings[Model.Asset].Decimals)
                                    </span>
                                </td>
                                <td>
                                    @ViewUtils.FormatDict(@item.detail)
                                </td>
                            </tr>
                        }
                    }
                    </tbody>
                </table>
            </div>
            @{
                if (more)
                {
                <div class="panel-footer">
                    <a asp-action="UserInspectExchangeBalanceHistory" asp-route-id="@Model.User.Id" asp-route-asset="@Model.Asset" asp-route-offset="@offset">more</a>
                </div>
                }
            }
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_PadDecimalsScriptsPartial")
}
