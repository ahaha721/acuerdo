@using viafront3.Views
@model TransactionCheckViewModel
@{
    ViewData["Title"] = "Transaction Check";
    ViewData.AddActivePage(ManageNavPages.Deposits);
    var newTxs = Model.NewTransactions.Any();
}

<h4>@ViewData["Title"]</h4>
<div class="row">
    <div class="col-md-6">
        @Model.Asset Deposit Address: @Model.DepositAddress
        <br/>
        Transactions:
        <ul>
        @{
            foreach (var item in Model.Transactions)
            {
                <li>@item</li>
            }
        }
        </ul>
        @{
            if (Model.NewDeposits > 0)
            {
                <strong>Processed new deposits of @Model.NewDepositsHuman @Model.Asset</strong>
            }
        }
        </ul>
    </div>
</div>

