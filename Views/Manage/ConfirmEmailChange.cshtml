@model ConfirmEmailChangeViewModel
@{
    ViewData["Title"] = "Confirm email change";
    ViewData.AddActivePage(ManageNavPages.Index);
}

<h4>@ViewData["Title"]</h4>
<div class="row">
    <div class="col-md-6">
        <div class="alert alert-warning" role="alert">
            <p>
                <span class="glyphicon glyphicon-warning-sign"></span>
                <strong>This action will change your account email address.</strong>
            </p>
            <p>
                Before confirming your change of email check that you recieved the test email to your new email address <strong>@Model.NewEmail</strong>. Only confirm this change if it was you who requested it and you are sure about the new address.
            </p>
        </div>
        <form method="post">
            <div class="form-group">
                <label asp-for="OldEmail"></label>
                <input asp-for="OldEmail" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="NewEmail"></label>
                <input asp-for="NewEmail" class="form-control" disabled />
            </div>
            <input type="hidden" asp-for="Code" />
            <button type="submit" class="btn btn-default">Confirm email change</button>
        </form>
    </div>
</div>
