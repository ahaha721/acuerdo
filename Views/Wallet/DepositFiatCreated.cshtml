@using viafront3.Models.WalletViewModels
@using viafront3.Views.Wallet
@using viafront3.Views
@model DepositFiatViewModel
@{
    ViewData["Title"] = "Pending Deposit Created";
    ViewData.AddActivePage(WalletNavPages.Deposits);
}

<h4>@ViewData["Title"]</h4>
<div class="row">
    <div class="col-md-6">
        <div class="panel panel-default">
            <div class="panel-heading">@Model.Asset Deposit</div>
            <div class="panel-body">
                <ul>
                    <li>Deposit Code: @Model.PendingTx.DepositCode</li>
                    <li>Amount: @Model.Amount @Model.Asset</li>
                </ul>
            </div>
            <div class="panel-footer">
                Bank Account:
                <ul>
                    <li>Bank Name: @Model.Account.BankName</li>
                    <li>Bank Address: @Model.Account.BankAddress</li>
                    <li>Account Name: @Model.Account.AccountName</li>
                    <li>Account Number: @Model.Account.AccountNumber</li>
                </ul>
            </div>
        </div> 
    </div>
</div>

